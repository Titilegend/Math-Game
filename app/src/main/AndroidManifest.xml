<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mathgameforkids">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/math_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/math_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MathGameForKids"
        tools:targetApi="31">
        <activity
            android:name=".DivisionActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".MultiplicationActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SubtractionActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:theme="@style/Theme.ResultsPage" />
        <activity
            android:name=".AdditionActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.MathGameForKids" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MathGameForKids">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>